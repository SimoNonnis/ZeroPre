{
  "name": "ZeroScssNpmScripts",
  "version": "0.0.2",
  "description": "Super lightweight boilerplate for frontend development (scss, npm scripts)",
  "scripts": {
    "clean": "rm -r dist",
    "precss": "mkdir -p dist && mkdir -p dist/css",
    "css": "node-sass --output-style compressed src/scss/main.scss > dist/css/main.min.css",
    "postcss": "postcss --use autoprefixer -b 'last 2 versions' -r dist/css/main.min.css",
    "prejs": "mkdir -p dist && mkdir -p dist/js",
    "js": "concat-cli -f src/js/vendor/*.js src/js/*.js -o dist/js/main.js",
    "postjs": "uglifyjs dist/js/main.js -m -c -o dist/js/main.min.js",
    "presvg": "mkdir -p dist && mkdir -p dist/images && mkdir -p dist/images/svg",
    "svg": "svgo -f src/images/svg -o dist/images/svg",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run css",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run js",
    "watch:all": "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "postinstall": "npm run css & npm run js && npm run watch:all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SimoNonnis/ZeroScssNpmScripts"
  },
  "keywords": [
    "boilerplate",
    "scss",
    "npm scripts",
    "gulp"
  ],
  "author": "Simon Nonnis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SimoNonnis/ZeroScssNpmScripts/issues"
  },
  "homepage": "https://github.com/SimoNonnis/ZeroScssNpmScripts#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "concat-cli": "^4.0.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "svgo": "^0.6.1",
    "uglify-js": "^2.6.1"
  }
}
